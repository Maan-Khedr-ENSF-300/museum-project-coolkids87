import mysql.connector

DROP DATABASE IF EXISTS Art_museum;
CREATE DATABASE Art_museum;
USE Art_museum;

-- This SQL code creates all the tables and inserts some data into the tables. (The format SQL code)
	1. ARTIST
	2. ART_OBJECT
	3. BORROWED_COLLECTION
	4. OWNED_COLLECTION
	5. OTHER
	6. PAINTING
	7. SCULPTURE
	8. STATUE
	9. EXHIBITION

DROP TABLE IF EXISTS ARTIST;
CREATE TABLE ARTIST
	(ArtistID		VARCHAR(10)		NOT NULL,
	Fname	      		VARCHAR(20)		NOT NULL,
   	Lname		 	VARCHAR(20) 		NOT NULL,
	Epoch		 	VARCHAR(20)		NOT NULL,
    	Descript	 	TEXT,
    	MainStyle	 	VARCHAR(50),
   	Country_origin		VARCHAR(20),
	DateBorn		DATE 			NOT NULL,	
   	DateDied		DATE,
   	PRIMARY KEY(ArtistID, Fname, Lname));
	
INSERT INTO ARTIST(ArtistID, Fname, Lname, Epoch, Descript, MainStyle, Country_origin, DateBorn, DateDied)
VALUES
('A-0000', 'Leonardo', 'Da Vinci', 'Renaissance', 'An artist, scientist and inventor', 'Renaissance', 'Italy', '1452-04-15', '1519-05-02'),
('A-0001', 'Imogen', 'Cunningham', '20th Century', 'Photographer', 'Pictorialist',  'USA', '1883-04-12', '1976-06-23')
;

DROP TABLE IF EXISTS ART_OBJECT;
CREATE TABLE ART_OBJECT 
	(Title			VARCHAR(20)		NOT NULL,
    	YearCreated		INT			NOT NULL,
    	Descript	    	TEXT,		
	Epoch			VARCHAR(20),
	CultureOfOrigin		VARCHAR(20),
    	ArtID 			CHAR(10)		NOT NULL,
	ArtistID		VARCHAR(10)		NOT NULL,
    	PRIMARY KEY(ArtID),
	FOREIGN KEY(ArtistID) REFERENCES ARTIST(ArtistID));

INSERT INTO ART_OBJECT(Title, YearCreated, Descript, Epoch, CultureOfOrigin, ArtID, ArtistID)
VALUES
('Mona Lisa', '1503', 'Very famous', 'Renaissance', 'Italy', 'P-0000', 'A-0000'),
('Magnolia Blossom', '1925', 'Black and white', '20th Century', 'USA', 'O-0001', 'A-0001')
;

DROP TABLE IF EXISTS BORROWED_COLLECTION;
CREATE TABLE BORROWED_COLLECTION 
	(ArtID			CHAR(10)		NOT NULL,
	collection_name	   	VARCHAR(20),
	Date_borrowed  		DATE			NOT NULL,
	Date_returned	       	DATE,
    	PRIMARY KEY(ArtID, collection_name),
    	FOREIGN KEY(ArtID) REFERENCES ART_OBJECT(ArtID));
    
DROP TABLE IF EXISTS OWNED_COLLECTION;
CREATE TABLE OWNED_COLLECTION
	(ArtID			CHAR(10)		NOT NULL,
	Name			VARCHAR(20)		NOT NULL,
   	Descript		VARCHAR(50),
   	Address			VARCHAR(20),
   	Phone			INT,
   	Type			VARCHAR(20), 
	ContactPhone		INT			NOT NULL,
	ContactFName		VARCHAR(25)		NOT NULL,
	ContactLName		VARCHAR(25)		NOT NULL,
   	PRIMARY KEY(ArtID, Name),
	FOREIGN KEY(ArtID) REFERENCES ART_OBJECT(ArtID));

DROP TABLE IF EXISTS OTHER;

CREATE TABLE ART_OBJECT 
   (Title			VARCHAR(20)				NOT NULL,
    Year			YEAR					NOT NULL,
    Description	    TEXT,			
    Country_Origin		VARCHAR(20), -- COULD BE UNKNOWN
    Epoch			VARCHAR(20),  -- COULD BE UNKNOWN,
    ArtID 			INT						NOT NULL,
    ArtistID 		INT						NOT NULL,
    PRIMARY KEY(ArtistID),
    PRIMARY KEY(ArtID));
    
CREATE TABLE ARTIST
	(Epoch		  VARCHAR(20)			NOT NULL,
    Description	  TEXT		,
    MainStyle	  VARCHAR(50),
    Fname	      VARCHAR(15)			NOT NULL,
    Lname		  VARCHAR(20) 			NOT NULL,
    Country_origin	VARCHAR(20)	,
    DateDied		YEAR	,
    DateBorn		YEAR 			NOT NULL,	
    PRIMARY KEY(Artist_id, Fname, Lname),
    FOREIGN KEY(Artist_id) REFERENCES ART_OBJECT(ArtistID));
    

CREATE TABLE OTHER 
	(ArtID 			CHAR(10)		NOT NULL,
	Type			VARCHAR(10),
    	Style	        	VARCHAR(10),
    	PRIMARY KEY(ArtID),
    	FOREIGN KEY(ArtID) REFERENCES ART_OBJECT(ArtID));

DROP TABLE IF EXISTS PAINTING;
CREATE TABLE PAINTING 
	(ArtID 			CHAR(10)		NOT NULL,
	Style			VARCHAR(20),
    	Paint_type		VARCHAR(20),
    	Drawn_on		VARCHAR(20),
    	PRIMARY KEY(ArtID),
    	FOREIGN KEY(ArtID) REFERENCES ART_OBJECT(ArtID));

DROP TABLE IF EXISTS STATUE;
CREATE TABLE STATUE
	(ArtID 			CHAR(10)		NOT NULL,
	Height			FLOAT,
	Weight			FLOAT,			
    	Style			VARCHAR(20),
    	Material		VARCHAR(20),
    	PRIMARY KEY(ArtID),
    	FOREIGN KEY(ArtID) REFERENCES ART_OBJECT(ArtID));
 
DROP TABLE IF EXISTS SCULPTURE;
CREATE TABLE SCULPTURE 
	(ArtID 			CHAR(10)		NOT NULL,
	Height			FLOAT,
	Weight			FLOAT,			
    	Style			VARCHAR(20),
    	Material		VARCHAR(20),
    	PRIMARY KEY(ArtID),
    	FOREIGN KEY(ArtID) REFERENCES ART_OBJECT(ArtID));	
 
DROP TABLE IF EXISTS EXHIBITION;
CREATE TABLE EXHIBITION

	(ArtID 			CHAR(10)		NOT NULL,		
	Name    		VARCHAR(20)		NOT NULL,
    	Start_date		DATE			NOT NULL,
    	End_date		DATE			NOT NULL,
	PRIMARY KEY(ArtID, Name),
	FOREIGN KEY(ArtID) REFERENCES ART_OBJECT(ArtID));


	(Name     VARCHAR(20)	NOT NULL,
    Start_date	date		NOT NULL,
    End_date	DATE		NOT NULL);
    
CREATE TABLE OWNED_COLLECTION
	(Name	 VARCHAR(20) 	NOT NULL UNIQUE,
    Address		VARCHAR(50) 	NOT NULL,
    Description	VARCHAR(100),
    Phone		INT 	NOT NULL,
    Type		VARCHAR(20),
    Contact_phone 	INT 	NOT NULL UNIQUE,
    Contact_Fname		VARCHAR(20)    NOT NULL,
    Contact_Lname		VARCHAR(20) 	NOT NULL,
    Date_acquired		DATE			NOT NULL,
    Status			VARCHAR(15)			NOT NULL,
    COST			INT				NOT NULL,
    PRIMARY KEY(ArtID),
    FOREIGN KEY(ArtID) REFERENCES ART_OBJECT(ArtID));
    
CREATE TABLE BORROWED_COLLECTION 
	(BC_Name	   VARCHAR(20)	  NOT NULL UNIQUE,
    Date_returned	       DATE	      NOT NULL,
    Date_borrowed  			DATE		NOT NULL,
    PRIMARY KEY(ArtID),
    FOREIGN KEY(ArtID) REFERENCES ART_OBJECT(ArtID));
    

    -t
